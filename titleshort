function short_title($num) {
$limit = $num+1;
$title = str_split(get_the_title());
$length = count($title);
if ($length>=$num) {
$title = array_slice( $title, 0, $num);
$title = implode("",$title)."...";
echo $title;
} else {
the_title();
}}


<?php short_title(73); ?>


